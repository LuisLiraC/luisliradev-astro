---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) =>  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.last-blogs {
				font-size: 2rem;
				font-weight: bold;
				color: rgb(var(--black));
			}

			.post {
				text-decoration: none;
			}

			.post-title {
				font-size: 1.5rem;
				font-weight: bold;
				color: rgb(var(--black));
			}

			.post-description {
				font-size: 1rem;
				color: rgb(var(--gray));
			}

			.post:hover > p {
				color: var(--accent);
			}
		</style>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1>Luis Lira</h1>
			<p>
				Platform Engineer & SDET focused on building tools and systems that enhance developer productivity and workflow automation ⚛️ 🐍 🦀
			</p>
				<section>
					<h2 class="last-blogs">Últimos blogposts</h2>
					{
						posts.map((post) =>
							<a href={`/blog/${post.slug}/`} class="post">
								<p class="post-title">{post.data.title}</p>
								<p class="post-description">{post.data.description}</p>
							</a>
						)
					}
				</section>
			</main>
		<Footer />
	</body>
</html>
